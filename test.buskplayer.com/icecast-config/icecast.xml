<?xml version="1.0"?>
<icecast>
    <!-- Basic Settings -->
    <location>Earth</location>
    <admin>icemaster@localhost</admin>
    
    <!-- Server Settings -->
    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
    </limits>
    
    <!-- Authentication -->
    <authentication>
        <source-password>EtherIsBetter</source-password>
        <relay-password>hackme</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>hackme</admin-password>
    </authentication>
    
    <!-- Hostname -->
    <hostname>test.buskplayer.com</hostname>
    
    <!-- Listen on all interfaces, port 8000 -->
    <listen-socket>
        <port>8000</port>
        <bind-address>0.0.0.0</bind-address>
    </listen-socket>
    
    <!-- Mount Points -->
    <mount>
        <mount-name>/ether</mount-name>
        <password>EtherIsBetter</password>
        <max-listeners>100</max-listeners>
        <dump-file>/var/log/icecast2/access.log</dump-file>
        <burst-size>65536</burst-size>
        <fallback-mount>/fallback</fallback-mount>
        <fallback-override>1</fallback-override>
        <fallback-when-full>1</fallback-when-full>
        <intro>/usr/share/icecast2/web/intro.mp3</intro>
        <hidden>0</hidden>
        <public>1</public>
        <stream-name>Ether</stream-name>
        <stream-description>Live music streaming (test)</stream-description>
        <stream-url>https://test.buskplayer.com</stream-url>
        <genre>Various</genre>
    </mount>
    
    <!-- Logging -->
    <logging>
        <accesslog>/var/log/icecast2/access.log</accesslog>
        <errorlog>/var/log/icecast2/error.log</errorlog>
        <loglevel>3</loglevel>
        <logsize>10000</logsize>
    </logging>
    
    <!-- Security -->
    <security>
        <chroot>0</chroot>
    </security>
    
    <!-- File serving (for status pages) -->
    <fileserve>1</fileserve>
    <paths>
        <basedir>/usr/share/icecast2</basedir>
        <logdir>/var/log/icecast2</logdir>
        <webroot>/usr/share/icecast2/web</webroot>
        <adminroot>/usr/share/icecast2/admin</adminroot>
        <alias source="/" dest="/status.xsl"/>
    </paths>
</icecast>
